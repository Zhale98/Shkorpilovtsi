@model Room

<h3 class="pt-3 pb-3">СИГУРНИ ЛИ СТЕ, ЧЕ ИСКАТЕ ДА ИЗТРИЕТЕ ИНФОРМАЦИЯТА ЗА СТАЯТА</h3>


<div class="form-group">
    <label style="font-size: 1em;" asp-for="Name" class="col-3"></label>
    <label style="font-size: 1em;" class="font-weight-bold col-8">@Model.Name</label>
</div>
<div class="form-group">
    <label style="font-size: 1em;" asp-for="Description" class="col-3"></label>
    <label style="font-size: 1em;" class="font-weight-bold col-8">@Model.Description</label>
</div>
<div class="form-group">
    <label style="font-size: 1em;" asp-for="IsWc" class="col-3"></label>
    @if (Model.IsWc)
    {
        <label style="font-size: 1em;" class="font-weight-bold col-8">ДА</label>
    }
    else
    {
        <label style="font-size: 1em;" class="font-weight-bold col-8">НЕ</label>
    }
</div>
<div class="form-group">
    <label style="font-size: 1em;" asp-for="HasFridge" class="col-3"></label>
    @if (Model.HasFridge)
    {
        <label style="font-size: 1em;" class="font-weight-bold col-8">ДА</label>
    }
    else
    {
        <label style="font-size: 1em;" class="font-weight-bold col-8">НЕ</label>
    }
</div>
<div class="form-group">
    <label style="font-size: 1em;" asp-for="HasSofa" class="col-3"></label>
    @if (Model.HasSofa)
    {
        <label style="font-size: 1em;" class="font-weight-bold col-8">ДА</label>
    }
    else
    {
        <label style="font-size: 1em;" class="font-weight-bold col-8">НЕ</label>
    }
</div>
<div class="form-group pt-3">
    <a asp-action="list" asp-controller="room" class="btn btn-secondary">НАЗАД</a>
    <a class="btn btn-danger" asp-action="delete" asp-controller="room" asp-route-id="@Model.Id">ИЗТРИИ</a>
</div>
