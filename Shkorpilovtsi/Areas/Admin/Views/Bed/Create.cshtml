@model Bed

<h3 class="pt-3">СЪЗДАВАНЕ НА НОВО ЛЕГЛО</h3>

<form asp-action="create" asp-controller="bed" method="post">
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <a asp-action="list" asp-controller="bed" class="btn btn-secondary">НАЗАД</a>
        <button type="submit" class="btn btn-primary">СЪЗДАЙ</button>
    </div>
</form>
