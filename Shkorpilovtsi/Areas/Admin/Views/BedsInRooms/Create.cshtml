@model BedsInRoom

@{
    var rooms = (List<Room>)ViewBag.rooms;
    var beds = (List<Bed>)ViewBag.beds;
}

<h3 class="pt-3">ЗАДАВАНЕ НА ЛЕГЛО В СТАЯ</h3>

<form asp-action="create" asp-controller="bedsinrooms" method="post">
    <div class="form-group">
        <label asp-for="RoomId">ИЗБЕРИ СТАЯ</label>
        <select asp-for="RoomId" class="form-control">
            @foreach (var room in rooms)
            {
                <option value="@room.Id">@room.Description</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="RoomId">ИЗБЕРИ ВИД ЛЕГЛО</label>
        <select asp-for="BedId" class="form-control">
            @foreach (var bed in beds)
            {
                <option value="@bed.Id">@bed.Description</option>
            }
        </select>
    </div>
    <div class="form-group pt-3">
        <a asp-action="list" asp-controller="bedsinrooms" class="btn btn-secondary">НАЗАД</a>
        <button type="submit" class="btn btn-primary">ДОБАВИ</button>
    </div>
</form>
