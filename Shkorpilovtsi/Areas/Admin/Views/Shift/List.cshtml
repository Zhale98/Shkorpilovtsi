@model List<Shift>

<div class="container-fluid">
    <a class="btn btn-primary" asp-action="create" asp-controller="shift">ДОБАВИ СМЯНА</a>
</div>
<div class="col-12">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>№</th>
                <th>НОМЕР</th>
                <th>ОТ ДАТА</th>
                <th>ДО ДАТА</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Number</td>
                    <td>@Model[i].StartDate.ToShortDateString()</td>
                    <td>@Model[i].EndDate.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-link" asp-action="Edit" asp-controller="shift" asp-route-id="@Model[i].Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-link" asp-action="ConfirmDelete" asp-controller="shift" asp-route-id="@Model[i].Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>