@model Shift

<h3 class="pt-3 pb-3">СИГУРНИ ЛИ СТЕ, ЧЕ ИСКАТЕ ДА ИЗТРИЕТЕ ИНФОРМАЦИЯТА ЗА СМЯНАТА</h3>

<div class="form-group">
    <label style="font-size: 1em;" asp-for="Number" class="col-3"></label>
    <label style="font-size: 1em;" class="font-weight-bold col-8">@Model.Number</label>
</div>
<div class="form-group">
    <label style="font-size: 1em;" asp-for="StartDate" class="col-3"></label>
    <label style="font-size: 1em;" class="font-weight-bold col-8">@Model.StartDate.ToShortDateString()</label>
</div>
<div class="form-group">
    <label style="font-size: 1em;" asp-for="StartDate" class="col-3"></label>
    <label style="font-size: 1em;" class="font-weight-bold col-8">@Model.EndDate.ToShortDateString()</label>
</div>
<div class="form-group pt-3">
    <a asp-action="list" asp-controller="shift" class="btn btn-secondary">НАЗАД</a>
    <a class="btn btn-danger" asp-action="delete" asp-controller="shift" asp-route-id="@Model.Id">ИЗТРИИ</a>
</div>
