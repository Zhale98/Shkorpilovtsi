@model List<Price>

<div class="col-12 pt-3 pb-3">
    <a class="btn btn-primary" asp-action="create" asp-controller="price">ДОБАВИ НОВА ЦЕНА</a>
</div>
<div class="col-12">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>№</th>
                <th>СМЯНА</th>
                <th>КАТЕГОРИЯ</th>
                <th>ЦЕНА ЗА ДЕН</th>
                <th>ЦЕНА ЗА ЦЯЛАТА СМЯНА</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].Shift.Number</td>
                    <td>@Model[i].Category.Name</td>
                    <td>@Model[i].SingleDayPrice</td>
                    <td>@Model[i].FullPrice</td>
                    <td>
                        <a class="btn btn-link" asp-action="Edit" asp-controller="price" asp-route-id="@Model[i].Id"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-link" asp-action="ConfirmDelete" asp-controller="price" asp-route-id="@Model[i].Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
