@model Category

<h3 class="pt-3 pb-3">СИГУРНИ ЛИ СТЕ, ЧЕ ИСКАТЕ ДА ИЗТРИЕТЕ КАТЕГОРИЯТА</h3>

<div class="form-group">
    <label style="font-size: 1em;" asp-for="Name" class="col-3"></label>
    <label style="font-size: 1em;" class="font-weight-bold col-8">@Model.Name</label>
</div>
<div class="form-group pt-3">
    <a asp-action="list" asp-controller="category" class="btn btn-secondary">НАЗАД</a>
    <a class="btn btn-danger" asp-action="delete" asp-controller="category" asp-route-id="@Model.Id">ИЗТРИЙ</a>
</div>
