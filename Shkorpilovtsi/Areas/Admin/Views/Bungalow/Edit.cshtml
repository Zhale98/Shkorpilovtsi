@model Bungalow

@{ 
    var rooms = (List<Room>)ViewBag.rooms;    
}

<h3 class="pt-3">РЕДАКТИРАНЕ НА ДАННИТЕ ЗА БУНГАЛО №@Model.Number</h3>

<form asp-action="edit" asp-controller="bungalow" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsAvailable">
        <label class="form-check-label" asp-for="IsAvailable"></label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsActive">
        <label class="form-check-label" asp-for="IsActive"></label>
    </div>
    <div class="form-group">
        <label asp-for="MapCoords"></label>
        <input asp-for="MapCoords" class="form-control" />
    </div>
    @if (rooms?.Count > 0)
    {
        <div class="form-group">
            <ul>
                @foreach (var room in rooms)
                {
                    <li>
                        @room.Name
                        <a class="btn btn-link ml-2" asp-action="deleteroom" asp-controller="bungalow" asp-route-id="@room.Id" asp-route-bungalowId="@Model.Id">
                            <i class="fa fa-trash"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
    }    
    <div class="form-group pt-3">
        <a asp-action="list" asp-controller="bungalow" class="btn btn-secondary">НАЗАД</a>
        <button type="submit" class="btn btn-primary">ЗАПАЗИ</button>
    </div>
</form>

