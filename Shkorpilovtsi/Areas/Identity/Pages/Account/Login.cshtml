@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container vh-100">


    <div class="row h-100 align-items-center ">
        <div class="col-md-6">
            <section>
                <form id="account" method="post">
                    <h4 class="text-center text-primary">ВХОД</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group pb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white text-primary" id="email"><i class="fa fa-envelope"></i></span>
                        </div>
                        <input asp-for="Input.Email" class="form-control" aria-describedby="email" placeholder="Въведете емайл" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="input-group pb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white text-primary" id="password"><i class="fa fa-lock"></i></span>
                        </div>
                        <input asp-for="Input.Password" class="form-control" aria-describedby="password" placeholder="Въведете парола" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Влез</button>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрирай нов потребител</a>
                        </p>

                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6">

            <div class="img-fluid">
                <img src="~/img/login.jpg" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
