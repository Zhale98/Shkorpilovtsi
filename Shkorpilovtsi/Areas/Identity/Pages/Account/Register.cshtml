@page
@model RegisterModel

@{ 
    var categories = (List<Shkorpilovtsi.Models.Category>)ViewBag.categories;
}

<div class="container  vh-100">
    <div class="row h-100 align-items-center">
        <div class="col-md-6">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 class="text-center text-primary">Регистрация</h1>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group pb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white text-primary" id="email"><i class="fa fa-envelope"></i></span>
                    </div>
                    <input asp-for="Input.Email" class="form-control" aria-describedby="email" placeholder="Въведете емайл" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="input-group pb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white text-primary" id="password"><i class="fa fa-lock"></i></span>
                    </div>
                    <input asp-for="Input.Password" class="form-control" aria-describedby="password" placeholder="Въведете парола" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="input-group pb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white text-primary" id="confirmpassword"><i class="fa fa-lock"></i></span>
                    </div>
                    <input asp-for="Input.ConfirmPassword" class="form-control" aria-describedby="confirmpassword" placeholder="Потвърдете паролата" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="input-group pb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text bg-white text-primary" id="category"><i class="fa fa-user"></i></span>
                    </div>
                    <select asp-for="Input.CategoryId" class="form-control" aria-describedby="category" placeholder="Изберете категория">
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    
                </div>
                <button type="submit" class="btn btn-primary">Регистрирай се</button>
            </form>
        </div>
        <div class="col-md-6 ">
            <div class="img-fluid">
                <img src="~/img/register.jpg" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
